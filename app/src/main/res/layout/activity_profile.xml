<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Avatar -->
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_user"
            app:tint="#000000"
            android:layout_marginBottom="16dp" />

        <!-- Nome -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome do Usuário"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <!-- Email -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="usuario@email.com"
            android:textColor="#888888"
            android:layout_marginBottom="24dp" />

        <!-- Configurações -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Configurações"
            android:textSize="16sp"
            android:textColor="#000000"
            android:drawableStart="@android:drawable/ic_menu_manage"
            android:drawablePadding="8dp"
            android:padding="12dp" />

        <!-- Histórico -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Histórico de Serviços"
            android:textSize="16sp"
            android:textColor="#000000"
            android:drawableStart="@android:drawable/ic_menu_recent_history"
            android:drawablePadding="8dp"
            android:padding="12dp" />

        <!-- Avaliações -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Avaliações"
            android:textSize="16sp"
            android:textColor="#000000"
            android:drawableStart="@android:drawable/btn_star_big_on"
            android:drawablePadding="8dp"
            android:padding="12dp" />

        <!-- Sair -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sair"
            android:textSize="16sp"
            android:textColor="#FF0000"
            android:drawableStart="@android:drawable/ic_lock_power_off"
            android:drawablePadding="8dp"
            android:padding="12dp"
            android:layout_marginTop="24dp" />
    </LinearLayout>
</ScrollView>
