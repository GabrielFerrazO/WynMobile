<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serviços Disponíveis"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <!-- Subtítulo -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Encontre o profissional ideal para sua necessidade"
            android:textColor="#888888"
            android:layout_marginBottom="24dp" />

        <!-- Grade de serviços -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:alignmentMode="alignMargins"
            android:useDefaultMargins="true">

            <!-- Limpeza -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="abrirServico"
                android:tag="Limpeza">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_limpeza"
                    app:tint="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Limpeza"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Eletricista -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="abrirServico"
                android:tag="Eletricista">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_eletricista"
                    app:tint="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Eletricista"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Encanador -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="abrirServico"
                android:tag="Encanador">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_encanador"
                    app:tint="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Encanador"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Pintor -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="abrirServico"
                android:tag="Pintor">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_pintor"
                    app:tint="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pintor"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Jardinagem -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="abrirServico"
                android:tag="Jardinagem">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_jardinagem"
                    app:tint="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jardinagem"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Mudança -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:orientation="vertical"
                android:layout_margin="8dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="center"
                android:padding="16dp"
                android:clickable="true"
                android:focusable="true"
                android:onClick="abrirServico"
                android:tag="Mudança">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_mudanca"
                    app:tint="#000000" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mudança"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </GridLayout>
    </LinearLayout>
</ScrollView>
